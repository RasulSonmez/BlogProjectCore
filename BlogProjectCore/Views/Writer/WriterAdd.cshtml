@model BlogProjectCore.Models.AddProfileImage

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<form  class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Bilgileri Düzenleme</h4>
                <br />

                @Html.HiddenFor(x => x.WriterID)

                <div class="form-group">
                    <label for="exampleInputName1">ad soyad</label>

                    @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>

                    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>

                    @Html.PasswordFor(x => x.WriterPasword, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Yazar Görsel</label>
                    <input type="file" name="WriterImage">
                 
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <a href="/dashboard/index" class="btn btn-light">İptal</a>

            </div>
        </div>
    </div>
</form>

